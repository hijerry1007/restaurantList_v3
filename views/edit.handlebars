<form action="/restaurants/{{restaurant._id}}/edit" method="POST" class="mt-4 ml-4 text-secondary">
  <div class="w20"><label for="name" class="f2"><i class="fas fa-home"></i> 餐廳名稱</label>
    <input type="text" class="f3" name="name" value="{{restaurant.name}}"></div>
  <div class="w20"><label for="name_en" class="f2"><i class="fas fa-home"></i> 餐廳英文名稱</label>
    <input type="text" class="f3" name="name_en" value="{{restaurant.name_en}}">
  </div>
  <div class="w20">
    <label for="category" class="f2"><i class="fas fa-utensils"></i> 分類</label>
    <input type="text" class="f2" name="category" value="{{restaurant.category}}">
  </div>
  <div class="w20"><label for="image" class="f2"><i class="far fa-images"></i> 照片連結上傳</label>
    <input type="text" class="f12" name="image" value="{{restaurant.image}}"></div>
  <div class="w20"><label for="location" class="f2"><i class="fas fa-map-marker-alt"></i> 地址</label>
    <input type="text" class="f12" name="location" value="{{restaurant.location}}"></div>
  <div class="w20"> <label for="phone" class="f2"><i class="fas fa-mobile pr-1"></i> 電話</label>
    <input type=" text" class="f3" name="phone" value="{{restaurant.phone}}"></div>
  <div class="w20"><label for="google_map" class="f2"><i class="fas fa-map-marker-alt"></i> GoogleMap網址</label>
    <input type="text" class="f12" name="google_map" value="{{restaurant.google_map}}"></div>
  <div class="w20"><label for="rating" class="f2"><i class="far fa-thumbs-up"></i> 評價(1-5顆星)</label>
    <input type="text" class="f2" style="width:45px; height: 25px; text-align:center" name="rating"
      value="{{restaurant.rating}}"></div>
  <div class="w20"><label for="description" class="f2"><i class="far fa-sticky-note"></i> 介紹</label>
    <input type="text" class="f15" name="description" value="{{restaurant.description}}"></div>


  <div class="w20"><label for="done" class="f2">Visisted</label>
    <input type="checkbox" class="f2" style="width:45px; height: 25px; margin-left: -6px" name="done"
      {{#if restaurant.done}}checked{{/if}}></div>

  <button type="submit" class="mt-3 ml-3 btn btn-outline-info rounded-circle">Edit</button>
</form>
<form action="/restaurants/{{restaurant._id}}/delete" method="POST" class="w2 l1"
  style="display: inline; margin-top:-37px;">
  <button type="submit" class="ml-2 btn btn-outline-info  rounded-circle"
    onclick="return confirm(`確定要刪除此筆資料?`)">delete</button>
</form>