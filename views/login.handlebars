<nav class="navbar navbar-dark bg-dark navRegister">
  <a class="col-12 navbar-brand nav-title" href="#">
    <h1 class="mb-3 navRegister">
      Account Login
    </h1>
  </a>
</nav>

<div class="container mt-5">
  <div class="row">
    <div class="col-md-6 m-auto">{{> messages}}</div>
  </div>
  {{!-- form --}}
  <div class="row ">
    <div class="col-md-6 m-auto">
      <form method="POST" action="/users/login">
        <div class="form-group">
          <label for="email">
            <h5>Email address</h5>
          </label>
          <input type="email" class="form-control" style=" width: 350px; height:60px;" name="email" id="email"
            placeholder="Email" aria-describedby="emailHelp" value="{{{email}}}">

        </div>
        <div class="form-group">
          <label for="password">
            <h5>Password</h5>
          </label>
          <input type="password" class="form-control" style=" width: 350px; height:60px;" name="password" id="password"
            placeholder="Password">
        </div>
        <button type="submit" class="btn btn-outline-primary">Sing in</button>
        <a href="/auth/facebook" class="btn btn-outline-primary">Facebook Login</a>
      </form>
    </div>
  </div>
  <div class="row">
    <div class="col-md-6 m-auto">
      <p class="mt-2">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>

  </div>

</div>